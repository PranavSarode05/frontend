{
  "name": "Smart Find Replace",
  "description": "AI-powered find and replace tool for Contentstack entries",
  "version": "1.0.2",
  "target": {
    "type": "stack"
  },
  "ui_location": {
    "locations": [
      {
        "type": "cs.cm.entry.sidebar",
        "meta": [
          {
            "name": "Smart Find Replace",
            "path": "/",
            "signed": false,
            "enabled": true
          }
        ]
      }
    ]
  },
  "scope": {
    "content_types": ["*"],
    "branches": ["*"],
    "environments": ["*"]
  },
  "content_security_policy": {
    "connect-src": [
      "'self'",
      "*.contentstack.com",
      "*.contentstack.io", 
      "https://unpkg.com",
      "https://backend-f4ee.vercel.app"
    ],
    "script-src": [
      "'self'",
      "'unsafe-inline'",
      "*.contentstack.com",
      "https://unpkg.com"
    ]
  },
  "hosting": {
    "type": "hosted",
    "url": "https://frontend-app.eu-contentstackapps.com/"
  }
}
